{
    "version":"2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type":"shell",
            "command":"${workspaceFolder}\\build.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Launch Everest",
            "type":"shell",
            "command":"${workspaceFolder}\\..\\..\\Celeste.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build and Launch",
            "type":"shell",
            "command":"${workspaceFolder}\\build.bat",
            "args": ["r"],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label":"Package",
            "type":"shell",
            "command":"${workspaceFolder}\\package.bat",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}